{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "description": "NextJS boilerplate with TypeScript and Redux",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "test:dev": "NODE_ENV=test jest --watchAll",
    "start": "NODE_ENV=production PORT=$PORT next start",
    "build": "NODE_ENV=production rm -rf .next && next build",
    "dev": "next dev",
    "export": "NODE_ENV=production next build && next export",
    "serve-exported": " ws --spa -d ./out",
    "prettier": "prettier  --write **/*.{ts,tsx,js}",
    "lint:ts": "yarn run prettier && tslint -c tslint.json -t stylish --fix {pages,src,server}/**/*.{ts,tsx}",
    "lint:types": "tsc -p . --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn run lint:types",
      "pre-push": "yarn run test",
      "post-merge": "sh hooks/post-merge.sh",
      "post-rewrite": "sh hooks/post-merge.sh"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:ts"
    ]
  },
  "keywords": [
    "nextjs",
    "boilerplate",
    "typeccript",
    "react",
    "redux",
    "prettier",
    "stylelint",
    "jest",
    "enzyme",
    "svg sprite",
    "husky",
    "lint staged"
  ],
  "author": "Sanjay Twisk",
  "repository": {
    "type": "git",
    "url": "git@github.com:sanjaytwisk/nextjs-ts.git"
  },
  "license": "ISC",
  "dependencies": {
    "next": "^10.0.4",
    "next-redux-wrapper": "^6.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "svg-sprite-loader": "^4.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.5",
    "@types/react": "^16.9.27",
    "@types/react-redux": "^7.1.7",
    "@types/svg-sprite-loader": "^3.9.1",
    "acorn": "^7.1.1",
    "autoprefixer": "^10.1.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^25.2.4",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.2.4",
    "jest-svg-transformer": "^1.0.0",
    "lint-staged": "^10.1.0",
    "nodemon": "^2.0.2",
    "postcss": "^8.2.1",
    "prettier": "^2.0.2",
    "svgo": "^1.3.2",
    "svgo-loader": "^2.2.1",
    "tailwindcss": "^2.0.2",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.2.0",
    "typescript": "^4.1.3"
  }
}
